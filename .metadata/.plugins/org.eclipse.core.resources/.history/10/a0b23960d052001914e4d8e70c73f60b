package ziJieTiaoDong;

public class Main3 {

	
	public static int maxLength(Node root){
		
		    if (root.left==null&&root.right==null)
		    {
		        return 0;
		    }

		    int leftLength=0,rightLength=0;
		    if (root.left!=null)
		    {   
		        leftLength=maxLength(root.left)+1;
		    }
		    if (root.right!=null)
		    {   
		        rightLength=maxLengt(root.right)+1;
		    }

		    int sum=leftLength+rightLength+2;
		    

		    return sum;

	}

}
